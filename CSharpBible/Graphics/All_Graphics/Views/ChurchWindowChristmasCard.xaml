<UserControl x:Class="All_Graphics.Views.ChurchWindowChristmasCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="500">
    <UserControl.Resources>
        <Color x:Key="LeadColor">#2A2A2A</Color>
        <Color x:Key="GlassDeepBlue">#001A33</Color>
        <Color x:Key="GlassPurple">#2E003E</Color>
        <Color x:Key="GlassRed">#4A0000</Color>
        <Color x:Key="CandleWaxColor">#FDF5E6</Color>
        <Color x:Key="FlameCoreColor">#FFFFFF</Color>
        <Color x:Key="FlameInnerColor">#FFD700</Color>
        <Color x:Key="FlameOuterColor">#FF4500</Color>
        <Color x:Key="FirDarkColor">#003300</Color>
        <Color x:Key="FirLightColor">#006600</Color>
        <Color x:Key="GoldColor">#D4AF37</Color>

        <SolidColorBrush x:Key="LeadBrush" Color="{StaticResource LeadColor}"/>
        <SolidColorBrush x:Key="GoldBrush" Color="{StaticResource GoldColor}"/>
        <SolidColorBrush x:Key="FirDarkBrush" Color="{StaticResource FirDarkColor}"/>
        <SolidColorBrush x:Key="FirLightBrush" Color="{StaticResource FirLightColor}"/>
        <SolidColorBrush x:Key="CandleWaxBrush" Color="{StaticResource CandleWaxColor}"/>
        <SolidColorBrush x:Key="FlameCoreBrush" Color="{StaticResource FlameCoreColor}"/>
        <SolidColorBrush x:Key="FlameInnerBrush" Color="{StaticResource FlameInnerColor}"/>
        <SolidColorBrush x:Key="FlameOuterBrush" Color="{StaticResource FlameOuterColor}"/>
        
        <!-- Glow Effect for the Candle -->
        <RadialGradientBrush x:Key="CandleGlow" Center="0.5,0.5" GradientOrigin="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
            <GradientStop Color="#80FFD700" Offset="0"/>
            <GradientStop Color="#00FFD700" Offset="1"/>
        </RadialGradientBrush>
    </UserControl.Resources>

    <Viewbox Stretch="Uniform">
        <Grid Width="500" Height="800">
            <!-- Main Window Shape Definition -->
            <Grid.Clip>
                <PathGeometry Figures="M 0,250 A 250,250 0 0 1 500,250 L 500,800 L 0,800 Z" />
            </Grid.Clip>

            <!-- Background: Stained Glass Effect -->
            <Grid>
                <!-- Base Dark Background -->
                <Rectangle Fill="{StaticResource LeadBrush}"/>
                
                <!-- Glass Segments (Simulated with Gradients and Shapes) -->
                <!-- Top Arch Area -->
                <Path Data="M 0,250 A 250,250 0 0 1 500,250 L 250,250 Z" Fill="#102040" Opacity="0.8"/>
                
                <!-- Central Glow behind Candle -->
                <Ellipse Width="400" Height="400" Margin="50,200,50,200" VerticalAlignment="Top">
                    <Ellipse.Fill>
                        <RadialGradientBrush Center="0.5,0.5" GradientOrigin="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                            <GradientStop Color="#60FFA500" Offset="0"/>
                            <GradientStop Color="#20000040" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>

                <!-- Mosaic Pattern Lines (The Lead) -->
                <Path Stroke="{StaticResource LeadBrush}" StrokeThickness="4" 
                      Data="M 250,0 L 250,800 M 0,250 L 500,250 M 125,125 L 375,375 M 375,125 L 125,375" Opacity="0.5"/>
                
                <!-- Random Glass Shards Colors -->
                <Path Data="M 0,250 L 250,250 L 250,0 A 250,250 0 0 0 0,250 Z" Fill="#20000080" Margin="0"/>
                <Path Data="M 250,0 L 250,250 L 500,250 A 250,250 0 0 0 250,0 Z" Fill="#20000040" Margin="0"/>
            </Grid>

            <!-- Motif Layer -->
            <Canvas>
                <!-- Fir Branches (Tannenzweig) -->
                <!-- Bottom Layer Darker -->
                <Path Fill="{StaticResource FirDarkBrush}" 
                      Data="M 50,600 C 100,550 200,580 250,600 C 300,580 400,550 450,600 L 450,700 L 50,700 Z" />
                
                <!-- Needles/Texture -->
                <Path Stroke="{StaticResource FirLightBrush}" StrokeThickness="2"
                      Data="M 60,610 L 80,590 M 90,615 L 110,595 M 120,620 L 140,600 M 380,610 L 360,590 M 410,615 L 390,595" />

                <!-- Candle (Kerze) -->
                <Rectangle Width="60" Height="150" Canvas.Left="220" Canvas.Top="450" Fill="{StaticResource CandleWaxBrush}"/>
                
                <!-- Candle Wick -->
                <Line X1="250" Y1="450" X2="250" Y2="440" Stroke="Black" StrokeThickness="2"/>
                
                <!-- Flame -->
                <Grid Canvas.Left="235" Canvas.Top="380" Width="30" Height="60">
                    <!-- Glow -->
                    <Ellipse Width="100" Height="100" Margin="-35,-20,-35,-20" Fill="{StaticResource CandleGlow}" Opacity="0.6"/>
                    <!-- Outer Flame -->
                    <Path Data="M 15,60 C 0,60 0,30 15,0 C 30,30 30,60 15,60 Z">
                        <Path.Fill>
                            <LinearGradientBrush StartPoint="0.5,1" EndPoint="0.5,0">
                                <GradientStop Color="{StaticResource FlameOuterColor}" Offset="0"/>
                                <GradientStop Color="{StaticResource FlameInnerColor}" Offset="0.6"/>
                            </LinearGradientBrush>
                        </Path.Fill>
                    </Path>
                    <!-- Inner Flame -->
                    <Path Data="M 15,55 C 5,55 5,35 15,10 C 25,35 25,55 15,55 Z" Fill="{StaticResource FlameCoreBrush}" Opacity="0.8"/>
                </Grid>
            </Canvas>

            <!-- Text Overlay -->
            <StackPanel VerticalAlignment="Bottom" Margin="0,0,0,50">
                <TextBlock Text="Frohe Weihnachten" 
                           Foreground="{StaticResource GoldBrush}" 
                           FontFamily="Segoe Script" 
                           FontSize="40" 
                           FontWeight="Bold"
                           TextAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock Text="und ein gesegnetes Fest" 
                           Foreground="White" 
                           FontFamily="Segoe UI Light" 
                           FontSize="20" 
                           TextAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>

            <!-- Frame Overlay (The Lead/Stone Arch) -->
            <Path Stroke="{StaticResource LeadBrush}" StrokeThickness="15" 
                  Data="M 0,250 A 250,250 0 0 1 500,250 L 500,800 L 0,800 Z" />
            
            <!-- Inner Frame Detail -->
            <Path Stroke="#505050" StrokeThickness="2" 
                  Data="M 15,250 A 235,235 0 0 1 485,250 L 485,785 L 15,785 Z" />

        </Grid>
    </Viewbox>
</UserControl>
