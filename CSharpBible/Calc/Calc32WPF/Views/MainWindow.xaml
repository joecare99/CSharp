<Window
    x:Class="Calc32WPF.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Calc32WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mvvm="clr-namespace:Calc32WPF.ViewModels"
    x:Name="window"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Window.DataContext>
        <mvvm:MainWindowViewModel />
    </Window.DataContext>
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="2,2,2,2" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="FontSize" Value="16pt" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="FontSize" Value="16pt" />
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush MappingMode="RelativeToBoundingBox" StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#FFA9FFE8" />
                        <GradientStop Offset="0.519" Color="#FFE0FBF4" />
                        <GradientStop Offset="0.532" Color="#FF8DC6B6" />
                        <GradientStop Offset="0.998" Color="#FFAAF6E1" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="2,2,2,2" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="FontSize" Value="16pt" />
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Offset="0" Color="#FFA3A3A3" />
                        <GradientStop Offset="0.2" Color="White" />
                        <GradientStop Offset="0.8 " Color="White" />
                        <GradientStop Offset="0.999" Color="#FFA3A3A3" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
        <Style
            x:Key="Operation"
            BasedOn="{StaticResource {x:Type Button}}"
            TargetType="Button">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="20pt" />
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Offset="0" Color="#FFA3A3A3" />
                        <GradientStop Offset="0.1" Color="White" />
                        <GradientStop Offset="0.9 " Color="White" />
                        <GradientStop Offset="1.0" Color="#FFA3A3A3" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid x:Name="frmCalc32Main" Initialized="frmCalc32Main_Initialized">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="119" />
            <RowDefinition Height="83*" />
            <RowDefinition Height="22*" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="2*" />
                <RowDefinition Height="2*" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="5*" />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Label
                x:Name="lblMemory"
                Grid.Row="1"
                Grid.Column="1"
                HorizontalContentAlignment="Right"
                Content="{Binding Memory}" />
            <Label
                x:Name="lblAkkumulator"
                Grid.Row="2"
                Grid.Column="1"
                HorizontalContentAlignment="Right"
                Content="{Binding Accumulator}" />
            <Label
                x:Name="lblOperation"
                Grid.Row="2"
                Grid.Column="2"
                HorizontalContentAlignment="Center"
                Content="{Binding OperationText, Mode=OneWay}" />
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <Button
                x:Name="btnZero"
                Grid.Row="4"
                Grid.Column="3"
                AutomationProperties.AcceleratorKey="0"
                Command="{Binding NumberCommand}"
                CommandParameter="0"
                Content="0"
                Tag="0" />
            <Button
                x:Name="btnOne"
                Grid.Row="3"
                Grid.Column="2"
                AutomationProperties.AcceleratorKey="1"
                Command="{Binding NumberCommand}"
                CommandParameter="1"
                Content="1"
                Tag="1" />
            <Button
                x:Name="btnTwo"
                Grid.Row="3"
                Grid.Column="3"
                AutomationProperties.AcceleratorKey="2"
                Command="{Binding NumberCommand}"
                CommandParameter="2"
                Content="2"
                Tag="2" />
            <Button
                x:Name="btnThree"
                Grid.Row="3"
                Grid.Column="4"
                AutomationProperties.AcceleratorKey="3"
                Command="{Binding NumberCommand}"
                CommandParameter="3"
                Content="3"
                Tag="3" />
            <Button
                x:Name="btnFour"
                Grid.Row="2"
                Grid.Column="2"
                AutomationProperties.AcceleratorKey="4"
                Command="{Binding NumberCommand}"
                CommandParameter="4"
                Content="4"
                Tag="4" />
            <Button
                x:Name="btnFive"
                Grid.Row="2"
                Grid.Column="3"
                AutomationProperties.AcceleratorKey="5"
                Command="{Binding NumberCommand}"
                CommandParameter="5"
                Content="5"
                Tag="5" />
            <Button
                x:Name="btnSix"
                Grid.Row="2"
                Grid.Column="4"
                AutomationProperties.AcceleratorKey="6"
                Command="{Binding NumberCommand}"
                CommandParameter="6"
                Content="6"
                Tag="6" />
            <Button
                x:Name="btnSeven"
                Grid.Row="1"
                Grid.Column="2"
                AutomationProperties.AcceleratorKey="7"
                Command="{Binding NumberCommand}"
                CommandParameter="7"
                Content="7"
                Tag="7" />
            <Button
                x:Name="btnEight"
                Grid.Row="1"
                Grid.Column="3"
                AutomationProperties.AcceleratorKey="8"
                Command="{Binding NumberCommand}"
                CommandParameter="8"
                Content="8"
                Tag="8" />
            <Button
                x:Name="btnNine"
                Grid.Row="1"
                Grid.Column="4"
                AutomationProperties.AcceleratorKey="9"
                Command="{Binding NumberCommand}"
                CommandParameter="9"
                Content="9"
                Tag="9" />
            <Button
                x:Name="btnOpEquals"
                Grid.Row="3"
                Grid.RowSpan="2"
                Grid.Column="5"
                AutomationProperties.AcceleratorKey="="
                Command="{Binding OperationCommand}"
                CommandParameter="1"
                Content="="
                IsDefault="True"
                Style="{StaticResource Operation}" />
            <Button
                x:Name="btnOpPlus"
                Grid.Row="1"
                Grid.RowSpan="2"
                Grid.Column="5"
                AutomationProperties.AcceleratorKey="+"
                Command="{Binding OperationCommand}"
                CommandParameter="2"
                Content="+"
                Style="{StaticResource Operation}" />
            <Button
                x:Name="btnOpMinus"
                Grid.Row="0"
                Grid.Column="5"
                AutomationProperties.AcceleratorKey="-"
                Command="{Binding OperationCommand}"
                CommandParameter="3"
                Content="-"
                Style="{StaticResource Operation}" />
            <Button
                x:Name="btnOpMul"
                Grid.Row="0"
                Grid.Column="4"
                AutomationProperties.AcceleratorKey="*"
                Command="{Binding OperationCommand}"
                CommandParameter="4"
                Content="*"
                Style="{StaticResource Operation}" />
            <Button
                x:Name="btnOpDiv"
                Grid.Row="0"
                Grid.Column="3"
                AutomationProperties.AcceleratorKey="/"
                Command="{Binding OperationCommand}"
                CommandParameter="5"
                Content="/"
                Style="{StaticResource Operation}" />
        </Grid>
    </Grid>
</Window>
