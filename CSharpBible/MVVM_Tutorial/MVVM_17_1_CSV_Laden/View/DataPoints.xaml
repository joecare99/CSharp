<Page x:Class="MVVM_17_1_CSV_Laden.View.DataPoints"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MVVM_17_1_CSV_Laden.View"
      xmlns:mvvm="clr-namespace:MVVM_17_1_CSV_Laden.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DataPoints">
    <Page.DataContext>
        <mvvm:DataPointsViewModel/>
    </Page.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Content="Load Data" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Command="{Binding LoadCsV}"/>
        <ListBox  Margin="10,10,10,10" ItemsSource="{Binding DataPoints}" Grid.Row="1"/>
        <ProgressBar  Margin="10,10,10,10"  IsIndeterminate="{Binding IsLoading}" Grid.Row="2"/>
        <!--:ItemsSource="{d:SampleData ItemCount=5}"-->
    </Grid>
</Page>
