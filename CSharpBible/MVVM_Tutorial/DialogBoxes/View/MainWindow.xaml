<Window x:Class="DialogBoxes.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DialogBoxes.View"
        xmlns:mvvm="clr-namespace:DialogBoxes.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Window.DataContext>
        <mvvm:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="91*"/>
            <ColumnDefinition Width="109*"/>
        </Grid.ColumnDefinitions>
        
        <Button Content="Button" Command="{Binding OpenDialogCommand}"  HorizontalAlignment="Center" Height="56" Margin="0,44,0,0" VerticalAlignment="Top" Width="242"/>
        <Button Content="Button" Command="{Binding OpenMsgCommand}" HorizontalAlignment="Center" Height="71" Margin="0,146,0,0" VerticalAlignment="Top" Width="242"/>
        <Label Grid.Column="1" Content="{Binding Name}" HorizontalAlignment="Left" Margin="36,44,0,0" VerticalAlignment="Top"/>
        <Label Grid.Column="1" Content="{Binding Email}" HorizontalAlignment="Left" Margin="186,57,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
