<Page x:Class="MVVM_31a_CTValidation3.View.ValidationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MVVM_31a_CTValidation3.View"
      xmlns:mvvm="clr-namespace:MVVM_31a_CTValidation3.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ValidationPage">
    <Page.DataContext>
        <mvvm:ValidationPageViewModel/>
    </Page.DataContext>
    <StackPanel>
        <TextBlock>User-Name (min. 6 Char)</TextBlock>
        <TextBox ToolTip="{Binding VHelper[UserName]}" Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, Delay=100}"/>
    </StackPanel>
</Page>
