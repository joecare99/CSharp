<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_MasterDetail.Views"
      xmlns:p="clr-namespace:WPF_MasterDetail.Properties"
      xmlns:vc="clr-namespace:WPF_MasterDetail.ValueConverter"
      xmlns:mvvm="clr-namespace:WPF_MasterDetail.ViewModels"
      xmlns:model="clr-namespace:WPF_MasterDetail.Models"
    x:Class="WPF_MasterDetail.Views.MasterDetailView"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="{x:Static p:Resources.Title}">
    <Page.Resources>
        <vc:DateTimeValueConverter x:Key="DateTimeValueConverter"/>
    </Page.Resources>
    <Page.DataContext>
        <mvvm:MasterDetailViewModel/>
    </Page.DataContext>
    <StackPanel Background="Silver">
        <Label Content="MasterDetail-View:"/>
        <Grid>
            <TextBlock Text="{Binding Now, ConverterParameter=yyyy-MM-dd HH:mm:ss, Converter={StaticResource DateTimeValueConverter}, Mode=OneWay}"/>
        </Grid>
    </StackPanel>
</Page>
