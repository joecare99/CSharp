<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pattern_00_Template.Views"
      xmlns:vc="clr-namespace:Pattern_00_Template.ValueConverter"
      xmlns:mvvm="clr-namespace:Pattern_00_Template.ViewModels"
      xmlns:model="clr-namespace:Pattern_00_Template.Models"
    x:Class="Pattern_00_Template.Views.TemplateView"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TemplateView">
    <Page.Resources>
        <vc:DateTimeValueConverter x:Key="DateTimeValueConverter"/>
    </Page.Resources>
    <Page.DataContext>
        <mvvm:TemplateViewModel/>
    </Page.DataContext>
    <StackPanel Background="Silver">
        <Label Content="Temlate-View:"/>
        <Grid>
            <TextBlock Text="{Binding Now, ConverterParameter=yyyy-MM-dd HH:mm:ss, Converter={StaticResource DateTimeValueConverter}, Mode=OneWay}"/>
        </Grid>
    </StackPanel>
</Page>
