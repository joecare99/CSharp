                    </Polygon.RenderTransform>
                </Polygon>
                <!--<Line Margin="0,0,-20,-20" Stroke="Black" StrokeThickness="1" X1="{Binding Dx}" Y1="{Binding Dy}" X2="0" Y2="0"/>-->
