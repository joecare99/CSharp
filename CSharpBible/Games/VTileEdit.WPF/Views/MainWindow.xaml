<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="VTileEdit.WPF.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:VTileEdit.WPF.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:properties="clr-namespace:VTileEdit.WPF.Properties"
    Title="{x:Static properties:Strings.MainWindowTitle}"
    Width="1200"
    Height="720"
    MinWidth="960"
    MinHeight="640"
    mc:Ignorable="d">
    <DockPanel>
        <DockPanel.Resources>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        </DockPanel.Resources>

        <Menu DockPanel.Dock="Top">
            <MenuItem Header="{x:Static properties:Strings.MenuFileHeader}">
                <MenuItem Command="{Binding NewCommand}" Header="{x:Static properties:Strings.MenuFileNew}" />
                <MenuItem Command="{Binding OpenCommand}" Header="{x:Static properties:Strings.MenuFileOpen}" />
                <Separator />
                <MenuItem Command="{Binding SaveCommand}" Header="{x:Static properties:Strings.MenuFileSave}" />
                <MenuItem Command="{Binding SaveAsCommand}" Header="{x:Static properties:Strings.MenuFileSaveAs}" />
                <Separator />
                <MenuItem Command="{Binding ExitCommand}" Header="{x:Static properties:Strings.MenuFileExit}" />
            </MenuItem>
            <MenuItem Header="{x:Static properties:Strings.MenuEditHeader}">
                <MenuItem Command="{Binding UndoCommand}" Header="{x:Static properties:Strings.MenuEditUndo}" />
                <MenuItem Command="{Binding RedoCommand}" Header="{x:Static properties:Strings.MenuEditRedo}" />
            </MenuItem>
        </Menu>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Expander
                    Grid.Row="0"
                    Margin="0,0,0,8"
                    Collapsed="TileSetExpander_Collapsed"
                    IsExpanded="True">
                    <Expander.Header>
                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                            <TextBlock Text="{x:Static properties:Strings.TileSetDetailsHeader}" />
                            <TextBlock
                                Foreground="DarkOrange"
                                Text=" *"
                                ToolTip="{x:Static properties:Strings.TileSetPendingIndicator}"
                                Visibility="{Binding TileSetHasPendingChanges, Converter={StaticResource BooleanToVisibilityConverter}}" />
                        </StackPanel>
                    </Expander.Header>

                    <StackPanel Margin="0,4,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                Margin="0,0,8,8"
                                VerticalAlignment="Center"
                                Text="{x:Static properties:Strings.TileSetNameLabel}" />
                            <TextBox
                                Grid.Column="1"
                                Margin="0,0,8,8"
                                Text="{Binding TileSetNameInput, UpdateSourceTrigger=PropertyChanged}" />

                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="0,0,8,8"
                                VerticalAlignment="Center"
                                Text="{x:Static properties:Strings.TileSetWidthLabel}" />
                            <TextBox
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="0,0,8,8"
                                Text="{Binding TileSetTileWidthInput, UpdateSourceTrigger=PropertyChanged}" />

                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="0"
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Text="{x:Static properties:Strings.TileSetHeightLabel}" />
                            <TextBox
                                Grid.Row="2"
                                Grid.Column="1"
                                Margin="0,0,8,8"
                                Text="{Binding TileSetTileHeightInput, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>

                        <TextBlock
                            Margin="8,8,8,8"
                            Foreground="DarkRed"
                            Text="{x:Static properties:Strings.TileSetApplyWarning}"
                            TextWrapping="Wrap"
                            Visibility="{Binding TileSetShowsShrinkWarning, Converter={StaticResource BooleanToVisibilityConverter}}" />

                        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                            <Button
                                Width="140"
                                Height="40"
                                Margin="0,0,8,0"
                                Command="{Binding DiscardTileSetChangesCommand}"
                                Content="{x:Static properties:Strings.TileSetDiscardButtonLabel}"
                                IsEnabled="{Binding TileSetHasPendingChanges}" />
                            <Button
                                Width="140"
                                Height="40"
                                Margin="0,0,8,0"
                                Command="{Binding ApplyTileSetChangesCommand}"
                                Content="{x:Static properties:Strings.TileSetApplyButtonLabel}"
                                IsEnabled="{Binding TileSetHasPendingChanges}" />
                        </StackPanel>
                    </StackPanel>
                </Expander>

                <controls:TileListView Grid.Row="1" FontFamily="{Binding SelectedFontFamily}" />
            </Grid>

            <GridSplitter
                Grid.Column="1"
                Width="5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="#22000000" />

            <controls:TileEditorHostView Grid.Column="2" DataContext="{Binding TileEditorHost}" />
        </Grid>
    </DockPanel>
</Window>
