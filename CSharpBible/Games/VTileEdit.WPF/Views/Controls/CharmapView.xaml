<UserControl x:Class="VTileEdit.WPF.Views.Controls.CharmapView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:properties="clr-namespace:VTileEdit.WPF.Properties"
             x:Name="Root">
    <GroupBox Header="{x:Static properties:Strings.CharMapHeader}">
        <StackPanel>
            <TextBlock Text="{x:Static properties:Strings.CharMapHint}"
                       Margin="0,0,0,8"
                       Foreground="Gray" />
            <ScrollViewer Height="140">
                <ItemsControl ItemsSource="{Binding ItemsSource, ElementName=Root}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="16" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding}"
                                    FontFamily="Consolas"
                                    FontSize="14"
                                    Margin="2"
                                    Width="30"
                                    Height="30"
                                    Command="{Binding Command, ElementName=Root}"
                                    CommandParameter="{Binding}"
                                    ToolTip="{Binding}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" BorderBrush="#33000000" BorderThickness="1" CornerRadius="3">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>
    </GroupBox>
</UserControl>
