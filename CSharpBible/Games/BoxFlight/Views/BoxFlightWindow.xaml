<Window x:Class="BoxFlight.Views.BoxFlightWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BoxFlight" Width="1000" Height="600">
  <Grid Margin="8">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <StackPanel Orientation="Horizontal">
      <CheckBox Content="Pause" IsChecked="{Binding Pause}"/>
      <CheckBox Margin="8,0,0,0" Content="Stereo" IsChecked="{Binding Stereo}"/>
      <CheckBox Margin="8,0,0,0" Content="Show Objects" IsChecked="{Binding ShowObjects}"/>
      <Slider Margin="8,0,0,0" Width="200" Minimum="0" Maximum="2000" Value="{Binding ScrollOffset}"/>
      <Button Margin="8,0,0,0" Content="Start" Command="{Binding StartCommand}"/>
      <Button Margin="8,0,0,0" Content="Stop" Command="{Binding StopCommand}"/>
    </StackPanel>

    <Grid Grid.Row="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="2*"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>

      <Image Grid.Column="0" Stretch="Fill" Source="{Binding Frame}"/>

      <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Padding="4">
        <Image Stretch="Uniform" Source="{Binding MiniMap}"/>
      </Border>
    </Grid>
  </Grid>
</Window>