<Window x:Class="SharpHack.View.FirstPerson.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:SharpHack.View.FirstPerson.Views"
        xmlns:vm="clr-namespace:SharpHack.ViewModel;assembly=SharpHack.ViewModel"
        xmlns:props="clr-namespace:SharpHack.View.FirstPerson.Properties"
        mc:Ignorable="d"
        Title="{x:Static props:Resources.AppTitle}" Height="600" Width="800"
        d:DataContext="{d:DesignInstance vm:FirstPersonGameViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <views:FirstPersonView Grid.Row="0" DataContext="{Binding}" />

        <StatusBar Grid.Row="1">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{x:Static props:Resources.HPLabel}" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding HP}"/>
                    <TextBlock Text="/"/>
                    <TextBlock Text="{Binding MaxHP}"/>
                </StackPanel>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{x:Static props:Resources.LevelLabel}" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding Level}"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
