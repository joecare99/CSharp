<Window x:Class="SharpHack.WPF2D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SharpHack.WPF2D" Height="720" Width="1024">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="Player:" VerticalAlignment="Center"/>
            <TextBlock Text=" " />
            <TextBlock Text="{Binding Game.PlayerName}" VerticalAlignment="Center"/>

            <TextBlock Text="   HP:" VerticalAlignment="Center" Margin="12,0,0,0"/>
            <TextBlock Text="{Binding Game.HP}" VerticalAlignment="Center"/>
            <TextBlock Text="/" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding Game.MaxHP}" VerticalAlignment="Center"/>

            <TextBlock Text="   Level:" VerticalAlignment="Center" Margin="12,0,0,0"/>
            <TextBlock Text="{Binding Game.Level}" VerticalAlignment="Center"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Game.Cells}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="{Binding Game.ViewWidth}" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#22000000" BorderThickness="0.5" Padding="4">
                            <TextBlock Text="{Binding Structure.Symbol}" FontFamily="Consolas" />
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
