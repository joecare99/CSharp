<Application
    x:Class="Galaxia.UI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >
    <Application.Resources>
        <!--  DataTemplates fuer einfache Visualisierung  -->
        <DataTemplate xmlns:vm="clr-namespace:Galaxia.UI.ViewModels" DataType="{x:Type vm:SectorViewModel}">
            <Border
                Margin="2"
                Padding="4"
                BorderBrush="Gray"
                BorderThickness="1">
                <StackPanel>
                    <TextBlock FontWeight="Bold" Text="{Binding Name}" />
                    <TextBlock Text="{Binding Position}" />
                    <ItemsControl ItemsSource="{Binding Starsystems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock
                                    FontSize="10"
                                    FontStyle="Italic"
                                    Text="{Binding}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </DataTemplate>
    </Application.Resources>
</Application>