<Window x:Class="ActionTestWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ActionTestWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnQuit" Content="Schliessen" Height="100" Margin="0,40,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="300" IsEnabled="False" ClickMode="Press" Click="btnQuit_Click"/>
        <TextBox x:Name="edtInput" HorizontalAlignment="Center" Height="33" Margin="0,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="253" TextChanged="edtInput_TextChanged" AutomationProperties.HelpText="Enter Quit here"/>
        <Label x:Name="lblEnterQuit" Content="Enter Quit above to enable the Button" HorizontalAlignment="Center" Margin="0,230,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblTextboxHint" Content="Enter Quit here" HorizontalAlignment="Center" Margin="0,160,0,0" VerticalAlignment="Top" IsEnabled="False"/>

    </Grid>
</Window>
