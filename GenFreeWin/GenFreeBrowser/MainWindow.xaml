<Window x:Class="GenFreeBrowser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:GenFreeBrowser.Views"
        mc:Ignorable="d"
        Title="GenFree Browser" Height="600" Width="1000">
    <Window.Resources>
        <!-- DataTemplate für Personenliste -->
        <DataTemplate DataType="{x:Type vm:FraPersonenListViewModel}" xmlns:vm="clr-namespace:GenFreeBrowser.ViewModels">
            <views:FraPersonenList />
        </DataTemplate>
    </Window.Resources>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Ansichten">
                <MenuItem Header="Personen" Command="{Binding ShowPersonenListeCommand}" />
            </MenuItem>
        </Menu>
        <ContentControl Content="{Binding CurrentViewModel}" />
    </DockPanel>
</Window>
