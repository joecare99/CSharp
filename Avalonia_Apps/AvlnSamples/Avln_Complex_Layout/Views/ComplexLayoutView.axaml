<UserControl xmlns="https://github.com/avaloniaui"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 x:Class="Avln.ComplexLayout.Views.ComplexLayoutView">
 <Grid RowDefinitions="Auto,* ,Auto"
 ColumnDefinitions="Auto,*,Auto">
 <TextBlock Grid.ColumnSpan="3" Text="{x:Static p:Resources.txtHeader}"/>
 <TextBlock Grid.Row="1" Grid.Column="0" Text="{x:Static p:Resources.txtLeft}"/>
 <StackPanel Grid.Row="1" Grid.Column="1">
 <TextBlock Text="{x:Static p:Resources.txtClient}"/>
 <StackPanel Orientation="Horizontal" Spacing="8">
 <Button Content="{x:Static p:Resources.btnButton1}" Command="{Binding Button1Command}"/>
 <Button Content="{x:Static p:Resources.btnButton2}" Command="{Binding Button2Command}"/>
 </StackPanel>
 <Border IsVisible="{Binding ShowMessage}">
 <StackPanel>
 <TextBlock Text="{x:Static p:Resources.txtMsgTitle}"/>
 <TextBlock Text="{Binding MessageText}"/>
 <Button Content="OK" Command="{Binding Msg_OKCommand}"/>
 </StackPanel>
 </Border>
 </StackPanel>
 <TextBlock Grid.Row="2" Grid.ColumnSpan="3" Text="{x:Static p:Resources.txtFooter}"/>
 </Grid>
</UserControl>