<Window xmlns="https://github.com/avaloniaui"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:Avln_Sample_Template.ViewModels"
  xmlns:views="using:Avln_Sample_Template.Views"
      mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
   x:Class="Avln_Sample_Template.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Sample Template - Avalonia"
        Width="800" Height="450">

    <Design.DataContext>
 <vm:MainWindowViewModel/>
    </Design.DataContext>

    <TabControl>
   <TabItem Header="Template">
   <views:TemplateView/>
 </TabItem>
        <TabItem Header="Xaml">
        <DockPanel>
         <TextBlock DockPanel.Dock="Top" Text="the Xaml-Code" />
        <TextBox IsReadOnly="True" AcceptsReturn="True" 
      TextWrapping="Wrap"
          ScrollViewer.VerticalScrollBarVisibility="Visible">
       Sample XAML Code will be here
         </TextBox>
      </DockPanel>
        </TabItem>
  <TabItem Header="ViewModel">
         <DockPanel>
      <TextBlock DockPanel.Dock="Top" Text="the ViewModel-Code" />
       <TextBox IsReadOnly="True" AcceptsReturn="True" 
      TextWrapping="Wrap"
         ScrollViewer.VerticalScrollBarVisibility="Visible">
   Sample ViewModel Code will be here
    </TextBox>
    </DockPanel>
      </TabItem>
   </TabControl>
</Window>
