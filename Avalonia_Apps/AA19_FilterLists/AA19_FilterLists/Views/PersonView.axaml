<UserControl xmlns="https://github.com/avaloniaui"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 x:Class="AA19_FilterLists.Views.PersonView"
 mc:Ignorable="d">
 <Grid RowDefinitions="Auto,Auto,Auto,*,Auto" ColumnDefinitions="Auto,*,Auto">
 <TextBlock Grid.Row="0" Grid.Column="0" Margin="4" Text="Filter:"/>
 <TextBox Grid.Row="0" Grid.Column="1" Margin="4" Text="{Binding Filter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
 <Button Grid.Row="0" Grid.Column="2" Margin="4" Content="Clear" Command="{Binding ClearFilterCommand}"/>

 <StackPanel Grid.Row="1" Grid.ColumnSpan="3" Orientation="Horizontal" Spacing="8" Margin="4">
 <TextBox Width="120" Watermark="First Name" Text="{Binding NewPerson.FirstName, Mode=TwoWay}"/>
 <TextBox Width="120" Watermark="Last Name" Text="{Binding NewPerson.LastName, Mode=TwoWay}"/>
 <TextBox Width="120" Watermark="Title" Text="{Binding NewPerson.Title, Mode=TwoWay}"/>
 <Button Content="Add" Command="{Binding btnAddPerson}"/>
 </StackPanel>

 <ListBox Grid.Row="3" Grid.ColumnSpan="3" Margin="4" Items="{Binding FilteredPersons}">
 <ListBox.ItemTemplate>
 <DataTemplate>
 <TextBlock Text="{Binding FullName}"/>
 </DataTemplate>
 </ListBox.ItemTemplate>
 </ListBox>
 </Grid>
</UserControl>
